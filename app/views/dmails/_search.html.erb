<%= form_search(path: dmails_path) do |f| %>
  <%= f.hidden_field :folder, value: params[:folder] %>
  <%= f.input :title_matches, label: "Title", hint: "Use * for wildcard" %>
  <%= f.input :message_matches, label: "Message", hint: "Use * for wildcard" %>
  <%= f.user :to %>
  <%= f.user :from %>
<% end %>
