<div class="quick-mod">
  <% if post.is_approvable? %>
  <div class="quick-mod-group">
    <%= tag.a "Approve",
      id: "approve-post",
      href: "#",
      class: "approve-post-link button btn-neutral btn-important",
      data: {
        pid: post.id,
        shortcut: "shift+o",
      }
    %>
    |
    <% if post.presenter.has_sequential_navigation?(params) %>
      <%= tag.a "Approve And Prev",
        id: "approve-post-prev",
        href: "#",
        class: "approve-post-and-navigate-link button btn-neutral",
        data: {
          pid: post.id,
          location: show_seq_post_path(post, q: params[:q], seq: "prev"),
          shortcut: "shift+q",
        }
      %>
      &bull;
      <%= tag.a "Approve And Next",
        id: "approve-post-next",
        href: "#",
        class: "approve-post-and-navigate-link button btn-neutral",
        data: {
          pid: post.id,
          location: show_seq_post_path(post, q: params[:q], seq: "next"),
          shortcut: "shift+w",
        }
      %>
    <% end %>
  </div>
  <% end %>
  <div class="quick-mod-group">
    <%= link_to "Delete", confirm_delete_moderator_post_post_path(id: post.id), class: "button btn-neutral btn-important" %>
    |
    <%= link_to "Artistic", "#", class: "delete-with-reason-link button btn-neutral", data: { prompt: "artistic standards", reason: "Does not meet minimum quality standards (Artistic)", post_id: post.id } %> &bull;
    <%= link_to "Anatomical", "#", class: "delete-with-reason-link button btn-neutral", data: { prompt: "anatomical errors", reason: "Anatomical -  Does not meet minimum quality standards (Anatomical anomalies)", post_id: post.id } %> &bull;
    <%= link_to "Young", "#", class: "delete-with-reason-link button btn-neutral", data: { prompt: "young characters in explicit situations", reason: "Irrelevant to site (Suggestive / Explicit Young content)", post_id: post.id } %> &bull;
    <%= link_to "Human", "#", class: "delete-with-reason-link button btn-neutral", data: { prompt: "being human only", reason: "Irrelevant to site (Human only)", post_id: post.id } %> &bull;
    <%= link_to "Realistic", "#", class: "delete-with-reason-link button btn-neutral", data: { prompt: "realistic feral content", reason: "Anything explicit that, at a glance, could be mistaken for a photograph is not allowed", post_id: post.id } %> &bull;
    <%= link_to "Upscaling", "#", class: "delete-with-reason-link button btn-neutral", data: { prompt: "being poorly upscaled", reason: "Does not meet minimum quality standards (Poor use of AI upscaling)", post_id: post.id } %> &bull;
    <%= link_to "Advert", "#", class: "delete-with-reason-link button btn-neutral", data: { prompt: "being an advertisement", reason: "Advertisement", post_id: post.id } %>

  </div>
  <div class="quick-mod-group">
    <%= link_to "Disapprove", "#", data: { post_id: post.id }, class: "detailed-rejection-link button btn-neutral btn-important" %> |
    <%= tag.a "Borderline Quality", href: "#", data: { pid: post.id, reason: "borderline_quality" }, class: "disapprove-post-link button btn-neutral" %> &bull;
    <%= tag.a "Borderline Relevancy", href: "#", data: { pid: post.id, reason: "borderline_relevancy" }, class: "disapprove-post-link button btn-neutral" %>
  </div>
</div>
